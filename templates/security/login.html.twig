{% extends 'base.html.twig' %}

{% block title %}Connexion Espace Admin{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="container login-container">
        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

        <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mx-auto">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mx-auto">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!-- checkbox -->
        <div class="form-check my-2 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mx-auto">
            <input class="form-check-input" type="checkbox" value="remember" id="flexCheckDefault" name="_remember_me" >
            <label class="form-check-label h5 text-left" for="flexCheckDefault">
                Se souvenir de moi
            </label>
        </div>
        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" value="confirm" id="flexCheckChecked"  required>
            <label class="form-check-label h5" for="flexCheckChecked">
                Je confirme ma connexion
            </label>
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary" type="submit">
                CONNEXION
            </button>
        </div>

    </div>


</form>
{% endblock %}
