{% extends 'base.html.twig' %}

{% block title %}VirtySens | Article : {{ media.titre }}{% endblock %}

{% block body %}

<!--main start-->
<main class="container-fluid mb-5 user-select-auto">

    <!--section 1 titre de l'article de presse start-->
    <section class="jobs-section-1 container mx-auto text-center my-5">
        <div class="row">
            <h3 class="mx-auto text-center col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
                {{ media.titre }}
            </h3>
        </div>
    </section>
    <!--section 1 titre de l'article de presse stop-->

    <!--ligne de separation doree start-->
    <div class="ligne-or">
    </div>
    <!--ligne de separation doree stop-->

    <!--section photo et video de l'article start-->
    <section class="jobs-section-2 container-fluid mx-auto text-center">
        <div class="row mx-auto text-center d-flex justify-content-center align-items-center">

            <!--caroussel des medias dans la vue start-->
            <div class="container-fluid mx-auto text-center">
                    <div id="carouselExampleControls" class="carousel slide row" data-ride="carousel" data-interval="false">
                        <div class="carousel-inner">
                            {% if media.image == true %}
                                <div class="carousel-item active">
                                    <img src="{{ asset('assets/img/' ~ media.image) }}" class="d-block w-97 mx-auto img-fluid" alt="photo de {{ media.titre }}">
                                </div>
                            {% endif %}
                            {% if media.image2 == true %}
                                <div class="carousel-item">
                                    <img src="{{ asset('assets/img/' ~ media.image2) }}" class="d-block w-97 mx-auto img-fluid" alt="photo de {{ media.titre }}">
                                </div>
                            {% endif %}
                            {% if media.image3 == true %}
                                <div class="carousel-item">
                                    <img src="{{ asset('assets/img/' ~ media.image3) }}" class="d-block w-97 mx-auto img-fluid" alt="photo de {{ media.titre }}">
                                </div>
                            {% endif %}
                        </div>
                        {% if media.image or media.image2 or media.image3 %}
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon bg-danger" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon bg-danger" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        {% else %}

                        {% endif %}

                    </div>
            </div>
            <!--caroussel des medias dans la vue stop-->

            {% if media.video == true %}
            <div class="embed-responsive embed-responsive-16by9 my-3 mx-auto text-center col-10 col-sm-10 col-md-10 col-lg-8 col-xl-8">
                <iframe class="embed-responsive-item mx-auto border border-dark rounded" src="{{ media.video }}" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            {% else %}
                <div style="display: none;"></div>
            {% endif %}
        </div>
    </section>
    <!--section photo et video de l'article stop-->


    <!--ligne de separation doree start-->
    <div class="ligne-or">
    </div>
    <!--ligne de separation doree stop-->

    <!--section photo et video de l'article start-->
    <section class="histoire-section-2 container-fluid mx-auto text-center">
        <div class="row mx-auto text-center d-flex justify-content-center align-items-center">
            <p class="col-11 col-sm-11 col-md-10 col-lg-10 col-xl-10 text-left">
                {{ media.contenu | raw }}
            </p>
        </div>
    </section>
    <!--section photo et video de l'article stop-->

    <!--bouton de retour start-->
    <div class="mx-auto text-center col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="btn-cta mx-auto my-1 text-center">
            <a href="{{ path('medias') }}" class="btn-cta btn btn-info btn-md mx-auto text-center text-white col-12 col-sm-11 col-md-10 col-lg-6 col-xl-6 text-uppercase">
                Retour aux m√©dias
            </a>
        </div>
    </div>
    <!--bouton de retour stop-->
</main>

{% endblock %}
